<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IT13.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:IT13.Views"
    FlyoutBackgroundColor="{StaticResource PrimaryDark}"
    FlyoutIcon="menu.png">

    <!-- Flyout Items (Sidebar) -->
    <FlyoutItem Title="Dashboard" Icon="dashboard.png">
        <ShellContent Route="dashboard" ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Agents" Icon="agent.png">
        <ShellContent ContentTemplate="{DataTemplate views:AgentsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Tenants" Icon="tenant.png">
        <ShellContent ContentTemplate="{DataTemplate views:TenantsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Landlords" Icon="landlord.png">
        <ShellContent ContentTemplate="{DataTemplate views:LandlordsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Accountants" Icon="accountant.png">
        <ShellContent ContentTemplate="{DataTemplate views:AccountantsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Properties" Icon="property.png">
        <ShellContent ContentTemplate="{DataTemplate views:PropertiesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Leases" Icon="lease.png">
        <ShellContent ContentTemplate="{DataTemplate views:LeasesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Payments" Icon="payment.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaymentsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Maintenance" Icon="maintenance.png">
        <ShellContent ContentTemplate="{DataTemplate views:MaintenancePage}" />
    </FlyoutItem>

    <!-- Logout at bottom -->
    <MenuItem Text="Logout" IconImageSource="logout.png" 
              Command="{Binding LogoutCommand}" />

</Shell>